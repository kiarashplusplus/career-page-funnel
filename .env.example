# Career Page Funnel - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_USER=cpf
POSTGRES_PASSWORD=cpf_secret_change_me
POSTGRES_DB=jobs

# Connection URL (used by application)
DATABASE_URL=postgresql://cpf:cpf_secret_change_me@db:5432/jobs

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://redis:6379

# =============================================================================
# NOTIFICATIONS (Optional)
# =============================================================================

# Discord webhook for job alerts
DISCORD_WEBHOOK_URL=

# Email notifications (Gmail app password recommended)
EMAIL_ADDRESS=
EMAIL_APP_PASSWORD=

# Slack webhook
SLACK_WEBHOOK_URL=

# =============================================================================
# SCRAPER SETTINGS
# =============================================================================

# Rate limiting (requests per second)
SCRAPER_RATE_LIMIT=0.5

# User agent for scrapers
SCRAPER_USER_AGENT=CareerPageFunnel/1.0 (+https://github.com/kiarashplusplus/career-page-funnel)

# =============================================================================
# API KEYS (For conditional sources - requires partner approval)
# =============================================================================

# Indeed Publisher API (apply at https://www.indeed.com/publisher)
INDEED_PUBLISHER_ID=

# LinkedIn API (apply at https://developer.linkedin.com)
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# ZipRecruiter API (apply at https://www.ziprecruiter.com/partner)
ZIPRECRUITER_API_KEY=
